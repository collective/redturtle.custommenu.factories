<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="redturtle.custommenu.factories">

<body>

<metal:js fill-slot="javascript_head_slot">
	<script type="text/javascript"
	        tal:attributes="src string:${context/portal_url}/++resource++rt_manageform.js"></script>
	
	<link rel="stylesheet" media="screen" type="text/css"
	      tal:attributes="href string:${context/portal_url}/++resource++rt_manageform.css" />
</metal:js>

<metal:main fill-slot="main">

<div id="region-content" class="documentContent menumanage">

	<h1 class="documentFirstHeading">
    		Manage factories menu
	</h1>

    <a href=""
       class="link-parent"
       i18n:translate=""
       tal:attributes="href context/absolute_url">
    Return
    </a>

	<div class="menu-element new-menu-element">
		<form id="new-menu-element" action="">
			<fieldset>
				<legend i18n:translate="">New menu element</legend>
				<div class="menu-data-row">
					<div class="label-container">
						<label for="element-name"
						       i18n:translate="">Element name:</label>
					</div>
					<input id="element-name" name="element-name" value="" size="50" />
				</div>
				<div class="menu-data-row">
					<div class="label-container">
						<label for="element-description"
						       i18n:translate="">Element description:</label>
					</div>
					<input id="element-descr" name="element-descr" value="" size="50" />
				</div>
				<div class="menu-data-row">		
					<div class="label-container">
						<label for="condition-tales"
						       i18n:translate="">TALES condition:</label>
					</div>
					<input id="condition-tales" name="condition-tales" value="" size="50" />
				</div>
				<div class="menu-data-row">		
					<div class="label-container">
						<label for="element-tales"
						       i18n:translate="">TALES expression for URL:</label>
					</div>
					<input id="element-tales" name="element-tales" value="" size="50" />
				</div>
				<div class="visualClear"><!-- --></div>
				<input type="submit" name="Add" value="Add this"
				       id="add-new-element-menu" i18n:attributes="value" class="context" />
			</fieldset>
		</form>
	</div>

</div>

</metal:main>

</body>
</html>